<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="5dp"
        tools:layout_editor_absoluteX="-32dp"
        tools:layout_editor_absoluteY="-151dp"></LinearLayout>

    <TextView
        android:id="@+id/meal_type_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/cardview_light_background"
        android:gravity="center"
        android:minHeight="40dp"
        android:paddingStart="?android:expandableListPreferredChildPaddingLeft"
        android:paddingLeft="?android:expandableListPreferredChildPaddingLeft"
        android:text="Meal Type"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="18dp"
        app:layout_constraintTop_toTopOf="@+id/linearLayout"></TextView>
</androidx.constraintlayout.widget.ConstraintLayout>